<form theme="light">
  <label>RBA attribution - System</label>
  <fieldset submitButton="true" autoRun="true">
    <input type="text" token="field_system" searchWhenChanged="true">
      <label>System</label>
    </input>
    <input type="time" token="timepicker">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Aggregate Risk Score</title>
        <search>
          <query>|from datamodel:"Risk.All_Risk"|search risk_object=$field_system$ source="Threat*"|stats sum(risk_score) as "Aggregate Risk Score"</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="rangeValues">[0,40,60,90]</option>
        <option name="refresh.display">progressbar</option>
        <option name="useColors">1</option>
      </single>
      <html>
      	<style>.btn-secondary { margin: 5px 10px 5px 0; }</style>
        <a href="/app/SplunkEnterpriseSecuritySuite/asset_artifacts?form.time.earliest=$timepicker.earliest$&amp;form.time.latest=$timepicker.latest$&amp;form.s_asset=$field_system$/" class="btn btn-secondary" target="_BLANK">Investigate Asset Artifacts</a>
      </html>
    </panel>
    <panel>
      <viz type="viz_donut_c3.c3donut">
        <search>
          <query>|from datamodel:"Risk.All_Risk"|search risk_object=$field_system$ source="Threat*"|makemv delim="|" rule_attack_tactic_technique
|mvexpand rule_attack_tactic_technique
|rex field=rule_attack_tactic_technique "(^|\|)(?&lt;tactic&gt;.+?) - (?&lt;tactic_num&gt;.+?) - (?&lt;technique&gt;.+?) - (?&lt;technique_ref&gt;.*)"
|stats count as "ATT&amp;CK Tactics" by tactic</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="viz_donut_c3.c3donut.expand">true</option>
        <option name="viz_donut_c3.c3donut.label_show">true</option>
        <option name="viz_donut_c3.c3donut.label_value">ratio</option>
        <option name="viz_donut_c3.c3donut.legend_position">right</option>
        <option name="viz_donut_c3.c3donut.legend_show">1</option>
        <option name="viz_donut_c3.c3donut.tooltip_show">true</option>
        <option name="viz_donut_c3.c3donut.tooltip_value">default</option>
      </viz>
    </panel>
    <panel>
      <viz type="viz_donut_c3.c3donut">
        <search>
          <query>|from datamodel:"Risk.All_Risk"|search risk_object=$field_system$ source="Threat*"|makemv delim="|" rule_attack_tactic_technique
|mvexpand rule_attack_tactic_technique
|rex field=rule_attack_tactic_technique "(^|\|)(?&lt;tactic&gt;.+?) - (?&lt;tactic_num&gt;.+?) - (?&lt;technique&gt;.+?) - (?&lt;technique_ref&gt;.*)"
|stats count as "ATT&amp;CK Techniques" by technique</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="viz_donut_c3.c3donut.expand">true</option>
        <option name="viz_donut_c3.c3donut.label_show">true</option>
        <option name="viz_donut_c3.c3donut.label_value">ratio</option>
        <option name="viz_donut_c3.c3donut.legend_position">right</option>
        <option name="viz_donut_c3.c3donut.legend_show">1</option>
        <option name="viz_donut_c3.c3donut.tooltip_show">true</option>
        <option name="viz_donut_c3.c3donut.tooltip_value">default</option>
      </viz>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Asset Details</title>
        <search>
          <query>| `assets` | search [| makeresults | eval key="$field_system$" | makemv delim=",",key | mvexpand key] | rename key AS asset_name |table asset_name priority bunit category owner city country ip mac nt_host dns</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <format type="color" field="priority">
          <colorPalette type="map">{"critical":0xD25B3B,"high":0xFF8800,"medium":0xF0BE1B,"low":0x98BF3B,"informational":0x5378AD,"unknown":0x999999}</colorPalette>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Risk Rules triggered for the System</title>
      <table>
        <title>click on the row to view original events associated with the risk rule</title>
        <search>
          <query>|from datamodel:"Risk.All_Risk"|search risk_object=$field_system$ source="Threat*"|stats count(source) as count by source|lookup rule_drilldown source OUTPUT macroname|rename source as Rule</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
        <fields>["Rule","count"]</fields>
        <drilldown>
          <link target="_blank">search?q=%7C%60$row.macroname$($field_system$)%60%20%7C%60comment(%22$row.Rule$%22)%60&amp;earliest=$timepicker.earliest$&amp;latest=$timepicker.latest$</link>
        </drilldown>
      </table>
    </panel>
    <panel>
      <title>Notables for the System</title>
      <table>
        <search>
          <query>`notable`|search risk_object=$field_system$|table _time, owner, status_label, search_name</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Related System Risk Objects</title>
        <search>
          <query>index=risk (src_system="$field_system$" OR dest_system="$field_system$") risk_object!="$field_system$" risk_object_type="system"
| stats count, values(src_system) as src_system, values(dest_system) as dest_system, values(source) as source by risk_object
| sort - count</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <link target="_blank">/app/SA-RBA/RBASystemEvents?form.timepicker.earliest=$timepicker.earliest$&amp;form.timepicker.latest=$timepicker.latest$&amp;form.field_system=$row.risk_object$</link>
        </drilldown>
      </table>
    </panel>
    <panel>
      <table>
        <title>Related User Risk Objects</title>
        <search>
          <query>index=risk src_system="$field_system$" risk_object!="$field_system$" risk_object_type="user"
| stats count, values(src_user) as src_user, values(dest_system) as dest_system, values(source) as source by risk_object
| sort - count</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <link target="_blank">/app/SA-RBA/RBAUserEvents?form.timepicker.earliest=$timepicker.earliest$&amp;form.timepicker.latest=$timepicker.latest$&amp;form.field_user=$row.risk_object$</link>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Specific Risk Messages associated with System=$field_system$</title>
      <table>
        <search>
          <query>|from datamodel:"Risk.All_Risk"|search risk_object=$field_system$ source="Threat*"|stats count by risk_message</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="count">50</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <event>
        <title>Risk Attribution Events</title>
        <search>
          <query>index=risk risk_object=$field_system$ source="Threat*" impact="*" confidence="*"</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <fields>source, impact, confidence</fields>
        <option name="list.drilldown">none</option>
        <option name="raw.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="table.drilldown">none</option>
        <option name="type">table</option>
      </event>
    </panel>
  </row>
</form>